<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <!-- Compiled and minified CSS -->
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
       <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
       <link rel="stylesheet" href="style.css" type="text/css">
    <title>Task Manager</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper blue">
            <a href="#" class="brand-logo">Task Manager</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <% if(!currentUser){ %>
                    <li><a href="/login">Log In</a></li>
                    <li><a href="/register">Register</a></li>
                <% }  else { %>
                    <li><a href="#">Signed In As: <%= currentUser.username %></a></li>
                    <li><a href="/logout">Log Out</a></li>
                    <% } %>
              </ul>
        </div>

    </nav>
    <div class="container">
        <div class="row">
            <div class="input-field col s12 m8 l8">
                <form method="POST" action="/addTask">
                <label for="task">New Task</label>
                <input type="text" name="task" id="taskInput">
            
            </div>
            <button class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></button>
        </form>
        </div>
        <div class="row">
            <div class="col s12 m8 l8">
                <h2>Incomplete Tasks</h2>
                <div class="card">

                    <ul class="collection incomplete">
                        <% if(currentUser) {  const tasks = currentUser.tasks %>
                        <% tasks.forEach((task)=>{ %>
                          <%  if(task.completion === false && task.author.id.equals(currentUser._id)) { %>
                            <li>
                            <p class= "task"><%= task.text %></p><i class = "checkbox material-icons small">check_box_outline_blank</i>
                        </li>
                           <% } %>
                       <% }) %>
                    <% } %>
                    </ul>

                </div>
            </div>
            <div class="row">
                <div class="col s12 m8 l8">
                    <h2>Completed Tasks</h2>
                    <div class="card">
    
                        <ul class="collection complete">
                            <% if(currentUser){ %>
                                <% let tasks = currentUser.tasks %>
                                <% tasks.forEach((task)=>{ %>
                                  <%  if(task.completion === false && task.author.id.equals(currentUser._id)) { %>
                                    <li>
                                    <p class= "task"><%= task.text %></p><i class = "checkbox material-icons small">check_box_outline_blank</i>
                                </li>
                                   <% } %>
                               <% }) %>
                            <% } %>
                        </ul>
    
                    </div>
                </div>
        </div>
      
    </div>
 
     
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/app/app.js"></script>
                
</body>
</html>